<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:m="urn:import:gwt.material.design.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.panelPager {
		display: inline-block;
		padding-right: 20px;
	}
	
	.important {
		font-weight: bold;
	}
	</ui:style>
			<m:MaterialModal ui:field="modal" type="DEFAULT"
			dismissable="true" inDuration="500" outDuration="800">
			<m:MaterialModalContent ui:field="modalcontent">
				<g:SimplePanel ui:field="gridPanel" />
				<g:SimplePanel ui:field="pagerPanel" addStyleNames="{style.panelPager} right" />
			</m:MaterialModalContent>
			<m:MaterialModalFooter>
				<m:MaterialButton ui:field="closedescr" type="FLAT" />
			</m:MaterialModalFooter>
		</m:MaterialModal>
</ui:UiBinder> 