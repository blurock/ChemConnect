<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
	<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
				 xmlns:m="urn:import:gwt.material.design.client.ui">
		<ui:style>
			.block{
				display: block;
				padding: 20px;
			}
		</ui:style>
		<m:MaterialColumn grid="s12">
			<m:MaterialCard>
				<m:MaterialCardTitle ui:field="cardtitle" text="Area Chart" iconType="MORE_VERT" iconPosition="RIGHT" textColor="BLACK" addStyleNames="{style.block}"/>
				<m:MaterialCardContent ui:field="cardContent" addStyleNames="no-padding"/>
					
				<m:MaterialCardReveal>
					<m:MaterialCardTitle text="Area Chart" iconType="CLOSE" iconPosition="RIGHT" textColor="BLACK"/>
				</m:MaterialCardReveal>
					
				<m:MaterialCardAction>
				 	<m:MaterialLink target="_blank" href="https://github.com/GwtMaterialDesign/gwt-material-demo/blob/master/src/main/java/gwt/material/design/demo/client/ui/charts/MaterialAreaChart.ui.xml" text="UI Binder" textColor="BLUE"  />
					<m:MaterialLink target="_blank" href="https://github.com/GwtMaterialDesign/gwt-material-demo/blob/master/src/main/java/gwt/material/design/demo/client/ui/charts/MaterialAreaChart.java" text="Java"  textColor="BLUE"  />
				</m:MaterialCardAction>
			</m:MaterialCard>
		</m:MaterialColumn>
	</ui:UiBinder> 