<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:m="urn:import:gwt.material.design.client.ui">
	<ui:style>
	.block {
		display: block;
		padding: 20px;
	}
	</ui:style>
	<m:MaterialColumn grid="s12">
		<m:MaterialCard>
			<m:MaterialCardTitle ui:field="cardtitle" text="Area Chart"
				iconType="MORE_VERT" iconPosition="RIGHT" textColor="BLACK"
				addStyleNames="{style.block}" />
			<m:MaterialCardContent ui:field="cardContent"
				addStyleNames="no-padding" />

			<m:MaterialCardReveal>
				<m:MaterialCardTitle text="Area Chart" iconType="CLOSE"
					iconPosition="RIGHT" textColor="BLACK" />
				<m:MaterialCardContent ui:field="revealContent"
					addStyleNames="no-padding">
					<m:MaterialRow>
						<m:MaterialColumn grid="s2">
							<m:MaterialLink ui:field="calculate" text="Calculate"/>
						</m:MaterialColumn>
						<m:MaterialColumn grid="s10">
							<m:MaterialTextBox ui:field="calculateValues" text="300.0,1000.0,2000.0"/>
						</m:MaterialColumn>
					</m:MaterialRow>
					<m:MaterialRow>
						<m:MaterialColumn grid="s12">
							<m:MaterialTextArea ui:field="answer" text="Answer"/>
						</m:MaterialColumn>
					</m:MaterialRow>
				</m:MaterialCardContent>
			</m:MaterialCardReveal>

			<m:MaterialCardAction>
			</m:MaterialCardAction>
		</m:MaterialCard>
	</m:MaterialColumn>
</ui:UiBinder> 